<h1>@<%= @user.username + "'s Profile" %></h1>
<div class="profile col-xs-12">
  <div class="thumbnail col-lg-1 col-md-2 col-xs-4">
    <img src="<%=@user.image%>" alt="Missing Image">
  </div>
  <h3><%= @user.bio %></h3>
  <p><em>Following: <%= @user.follows.count %></em></p>
</div>

<%= render partial: "posts/post", :collection => @posts %>
