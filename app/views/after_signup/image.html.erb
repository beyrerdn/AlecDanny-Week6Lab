<h2>Finally, provide a URL for your profile image.</h2>

<%= bootstrap_form_for(@user, url: wizard_path, method: :put) do |f| %>
      <%= f.text_field :image, :placeholder => 'http://placekitten.com/200/300', autofocus: true %>
      <%= f.submit "Submit", :class => 'btn btn-primary' %>
<% end %>

