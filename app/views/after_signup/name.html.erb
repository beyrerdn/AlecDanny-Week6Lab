<h1>Thanks for signing up!</h1>

<h2>Please, tell us your name.</h2>

<%= bootstrap_form_for(@user, :url => wizard_path, :method => :put) do |f| %>
      <%= f.text_field :first_name, :placeholder => 'Kilgore', autofocus: true %>
      <%= f.text_field :last_name, :placeholder => 'Trout', autofocus: true %>
      <%= f.submit 'Next', :class => 'btn btn-primary' %>
<% end %>

